      "type": "hdfs or local"
    },
    "kafka-mode" : {
      "type" : "spark-kafka-plugin-streams-consumer",
      "brokers" : "kafka-broker-url:kafka-port",
      "offset" : {
        "type": "offset-to-consume-from"
      }
    }
  }
}