// POST http://localhost:5555/conversion/route
{
  "route": {
    "type": "file-to-kafka",
    "in": "/json/files/input/folder",
    "out" : "output-kafka-topic-name",
    "storage": {
      "type": "*hdfs* or *local*"
    },
    "kafka-mode": {
      "type": "spark-kafka-plugin-producer",
      "brokers" : "kafka-broker:kafka-port"
    }
  }
}