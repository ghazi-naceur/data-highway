// POST http://localhost:5555/conversion/route
{
  "spark" : {
    "app-name": "handler",
    "master-url": "local[*]",
    "log-level" : {
      "type": "warn"
    }
  },
  "route": {
    "type": "file-to-kafka",
    "in": "/app/data/input",
    "out": "topic-name",
    "broker-urls": "localhost:9092",
    "kafka-mode": {
      "type": "pure-kafka-producer",
      "use-stream": "true",
      "stream-app-id": "stream-app"
    }
  }
}